<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="TextStylePropertyValue" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStylePropertyValueMonospace" parent="TextStylePropertyValue">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TextStyleError" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyleErrorTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
